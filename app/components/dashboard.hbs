<Uc::Layout>
  <:logo><Uc::Layout::Logo /></:logo>
  <:title>{{t "dashboard.title"}}</:title>
  <:description>{{t "dashboard.description"}}</:description>
  <:content as |content|>
    <content.Wrapper>
      <Uc::LinkTile @route="network-map.index" @icon="/assets/images/icons/network.svg" local-class="item" data-test-button-network-map>
      {{t "dashboard.viewNetworkMap"}}
      </Uc::LinkTile>
      <Uc::LinkTile @route="qr-code" @icon="/assets/images/icons/qr-code.svg" local-class="item" data-test-button-qr-code>
        {{t "dashboard.viewQrCode"}}
      </Uc::LinkTile>
      <Uc::LinkTile @route="network-settings" @icon="/assets/images/icons/settings.svg" local-class="item" data-test-button-edit-settings>
        {{t "dashboard.editSettings"}}
      </Uc::LinkTile>
    </content.Wrapper>
  </:content>
</Uc::Layout>
